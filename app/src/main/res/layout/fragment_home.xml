<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/iv_alarm"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="12dp"
            android:src="@drawable/home1"

            />

        <TextView

            android:id="@+id/navigationbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="牵手关心"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_big" />


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/linecolor"
            android:visibility="visible" />

    </RelativeLayout>

    <com.canplay.medical.view.scrollView.StickyScrollView
        android:background="@color/content_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.canplay.medical.view.banner.BannerView
                android:id="@+id/bannerView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:bannerPageAlpha="1.0"
                app:bannerPageMargin="8dp"
                app:bannerPagePercent="0.8"
                app:bannerPageScale="0.8"
                app:bannerAnimScroll="true"
                app:bannerAutoScroll="true"
                app:bannerScrollDuration="4000"
                app:bannerAnimDuration="1500"/>
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:orientation="horizontal">

                <LinearLayout

                    android:id="@+id/ll_health"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:layout_width="57dp"
                            android:layout_height="57dp"
                            android:src="@drawable/home2"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="7dp"
                            android:layout_marginTop="7dp"
                            />

                    </RelativeLayout>

                    <TextView
                        android:textColor="@color/slow_black"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:gravity="center"
                        android:text="健康提醒"
                        android:textSize="13sp" />

                    />
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/ll_care"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:layout_width="57dp"
                            android:layout_height="57dp"
                            android:src="@drawable/home3"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="7dp"
                            android:layout_marginTop="7dp"
                            />

                    </RelativeLayout>

                    <TextView
                        android:textColor="@color/slow_black"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="关爱中心"

                        android:textSize="11sp" />
                </LinearLayout>


                <LinearLayout

                    android:id="@+id/ll_equipment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:layout_width="57dp"
                            android:layout_height="57dp"
                            android:src="@drawable/home4"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="7dp"
                            android:layout_marginTop="7dp"
                            />

                    </RelativeLayout>

                    <TextView
                        android:textColor="@color/slow_black"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="智能设备"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/ll_shop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:layout_width="57dp"
                            android:layout_height="57dp"
                            android:src="@drawable/home5"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="7dp"
                            android:layout_marginTop="7dp"
                            />

                    </RelativeLayout>

                    <TextView
                        android:textColor="@color/slow_black"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:gravity="center"
                        android:text="附近药店"
                        android:textSize="11sp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="49dp">
                <ImageView
                    android:src="@drawable/bule_samll"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:textColor="@color/slow_black"
                    android:text="每日健康提醒"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/linecolor"/>
            <com.canplay.medical.view.RegularListView
                android:divider="#00000000"
                android:dividerHeight="0dip"
                android:listSelector="@android:color/transparent"
                android:id="@+id/lv_info"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                style="@style/lv_content" />
        </LinearLayout>
    </com.canplay.medical.view.scrollView.StickyScrollView>


</LinearLayout>