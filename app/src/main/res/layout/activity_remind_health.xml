<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/content_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:id="@+id/line"/>
    <com.canplay.medical.view.NavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationLeft_img="@drawable/black_left"
        app:navigationRight_type="img"
        app:navigationRight_img="@drawable/zhongs"
        app:navigationTitle="健康提醒" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/linecolor"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="用药提醒"
                android:id="@+id/tv_use"
                android:textSize="15sp"

                android:textColor="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <ImageView
                android:src="@drawable/blue_line"
                android:id="@+id/ivline"
                android:layout_width="90dp"
                android:layout_height="2dp" />
        </LinearLayout>
        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:textSize="15sp"
                android:gravity="center"
                android:text="测量提醒"
                android:id="@+id/tv_merure"
                android:textColor="@color/slow_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:visibility="invisible"
                android:src="@drawable/blue_line"
                android:id="@+id/ivlines"
                android:layout_width="90dp"
                android:layout_height="2dp" />
        </LinearLayout>


    </LinearLayout>
    <com.canplay.medical.view.NoScrollViewPager
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:id="@+id/viewpager_main"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="添加用药提醒"
        android:id="@+id/tv_add"
        android:textSize="16.5sp"
        android:background="@drawable/blue_selector"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="47dp"
    />
</LinearLayout>