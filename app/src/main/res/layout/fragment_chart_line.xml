<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/content_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <ImageView

             android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:text="18.2.12 10:30"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color8"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:paddingTop="3dp"
        android:background="@color/white"
        android:id="@+id/ll_center"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="19dp"
            android:layout_width="113dp"
            android:layout_height="59dp">
            <ImageView
                android:src="@drawable/char_bg"
                android:layout_width="113dp"
                android:layout_height="59dp"
                />
            <TextView
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/red_pop"
                android:text="异常"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_press"
                android:text="130"
                android:textColor="@color/slow_black"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="9dp"
                android:text="收缩压"
                android:textColor="@color/color8"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_data"
                android:text="70"
                android:textColor="@color/slow_black"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="9dp"
                android:text="舒张压"
                android:textColor="@color/color8"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_rate"
                android:text="90"
                android:textColor="#FF5B74"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="9dp"
                android:text="心率"
                android:textColor="@color/color8"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
  <LinearLayout
      android:paddingTop="15dp"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <View
          android:layout_marginRight="22dp"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="@color/linecolor"/>
      <TextView
          android:text="正常值"
          android:textColor="#545454"
          android:textSize="14sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <View
          android:layout_marginLeft="22dp"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="@color/linecolor"/>
  </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="收缩压   130mmHg"
            android:textColor="@color/slow_black"
            android:textSize="16sp" />
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"/>
        <TextView

            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/tv_two"
            android:text="收缩压   130mmHg"
            android:textColor="@color/slow_black"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/char_blue_line"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:text="7天"
            android:id="@+id/tv_cone"
            android:textSize="15sp"
            android:background="@drawable/choose_hui_rectangle"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <View

            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#00A8FF"/>

        <TextView
            android:textSize="15sp"

            android:gravity="center"
            android:text="15天"
            android:id="@+id/tv_ctwo"
            android:textColor="#00A8FF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <View

            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#00A8FF"/>

        <TextView
            android:textSize="15sp"

            android:gravity="center"
            android:text="30天"
            android:id="@+id/tv_cthree"
            android:textColor="#00A8FF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.canplay.medical.view.NoScrollViewPager
            android:id="@+id/viewpager_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/content_bg" />


    </LinearLayout>

</LinearLayout>