<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/content_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:id="@+id/line"/>
    <com.canplay.medical.view.NavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationRight_type="txt"
        app:navigationRight_txt="刷新"
        app:navigationTitle="智能药盒" />
    <com.canplay.medical.view.scrollView.StickyScrollView
        android:layout_below="@+id/navigationBar"
        android:layout_marginBottom="59dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/content_bg"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:id="@+id/tv_code"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01药盒"
                    android:textColor="@color/blue"
                    android:textSize="15sp" />
                <TextView
                    android:layout_marginRight="15dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_time"
                    android:text="2018.01.09  13：00"
                    android:textColor="@color/color8"
                    android:textSize="13sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/store_line" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp" >
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_type"
                    android:layout_marginLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="药物种类（1）"
                    android:textColor="@color/slow_black"
                    android:textSize="15sp" />
                <TextView
                    android:layout_marginRight="15dp"
                    android:id="@+id/tv_count"
                    android:layout_marginLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7颗"
                    android:textColor="@color/slow_black"
                    android:textSize="15sp" />
            </LinearLayout>
                <com.canplay.medical.view.RegularListView
                    android:layout_marginTop="3dp"
                    android:divider="#00000000"
                    android:dividerHeight="0dip"
                    android:listSelector="@android:color/transparent"
                    android:id="@+id/rl_menu"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    style="@style/lv_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
                <com.canplay.medical.view.NoScrollGridView
                    android:layout_marginTop="10dp"
                    android:id="@+id/grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:minHeight="220dp"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none"
                    android:numColumns="3"
                    android:layout_centerInParent="true"/>


        </LinearLayout>

    </com.canplay.medical.view.scrollView.StickyScrollView>

    <TextView
        android:background="@color/blue"
       android:layout_marginTop="8dp"
         android:layout_alignParentBottom="true"
        android:id="@+id/tv_sure"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="15sp" />


</RelativeLayout>