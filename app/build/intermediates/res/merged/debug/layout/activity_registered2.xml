<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <ImageView
        android:id="@+id/iv_back"
        android:padding="13dp"
        android:src="@drawable/black_left"
        android:layout_width="45dp"
        android:layout_height="45dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_logo"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:text="姓          名"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.canplay.medical.view.ClearEditText
                android:id="@+id/et_name"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入姓名"
                android:inputType="text"
                android:maxLength="11"
                android:text=""
                android:textColor="@color/slow_black"
                android:textColorHint="@color/bd"
                android:textSize="16.5sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="3dp"
            android:background="@color/linecolor" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:text="first name"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.canplay.medical.view.ClearEditText
                android:id="@+id/et_fist"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:background="@null"

                android:gravity="center_vertical"
                android:hint="请输入firstname"
                android:maxLength="11"
                android:inputType="text"

                android:text=""
                android:textColor="@color/slow_black"
                android:textColorHint="@color/bd"
                android:textSize="16.5sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="1dp"
            android:background="@color/linecolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:text="last name"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.canplay.medical.view.ClearEditText
                android:id="@+id/et_last"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入lastname"
                android:inputType="text"
                android:maxLength="11"
                android:text=""
                android:textColor="@color/slow_black"
                android:textColorHint="@color/bd"
                android:textSize="16.5sp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="3dp"
            android:background="@color/linecolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:text="登录密码"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.canplay.medical.view.ClearEditText
                android:id="@+id/et_pws"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="11"
                android:text=""
                android:textColor="@color/slow_black"
                android:textColorHint="@color/bd"
                android:textSize="16.5sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="3dp"
            android:background="@color/linecolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:text="确认密码"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.canplay.medical.view.ClearEditText
                android:id="@+id/et_pwss"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="再次输入密码"
                android:inputType="textPassword"
                android:maxLength="11"
                android:text=""
                android:textColor="@color/slow_black"
                android:textColorHint="@color/bd"
                android:textSize="16.5sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="@color/linecolor" />

        <TextView

            android:id="@+id/tv_save"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/hui_blue_rectangle"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="16.5sp" />


    </LinearLayout>

</LinearLayout>
