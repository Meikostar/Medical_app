<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="84dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83.5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/moren" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阿莫西林"
                android:textColor="@color/slow_black"
                android:textSize="15.5sp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="250mg"
                android:textColor="@color/color8"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:text="3颗"
            android:textColor="@color/slow_black"
            android:textSize="15.5sp" />
    </LinearLayout>
    <com.canplay.medical.view.DashView
        android:visibility="gone"
        android:id="@+id/line"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        app:lineHeight="1dp"
        app:lineWidth="4dp"
        app:dashWidth="4dp"
        app:dashOrientation="0"
        app:lineColor="@color/linecolor"
        android:layout_height="1dp"
        />
</LinearLayout>