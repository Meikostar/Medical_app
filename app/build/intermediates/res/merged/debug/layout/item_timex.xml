<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/content_bg"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="9dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <com.canplay.medical.view.DashView
            android:id="@+id/line1"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_width="2dp"
            app:lineHeight="1dp"
            app:lineWidth="4dp"
            app:dashWidth="0dp"
            app:dashOrientation="1"
            app:lineColor="@color/linecolor"
            android:layout_height="28dp"
            />

        <com.canplay.medical.view.DashView
            android:id="@+id/line2"
            android:layout_marginTop="28dp"
            android:layout_centerHorizontal="true"
            android:layout_width="2dp"
            app:lineHeight="1dp"
            app:lineWidth="4dp"
            app:dashWidth="0dp"
            app:dashOrientation="1"
            app:lineColor="@color/linecolor"
            android:layout_height="80dp"
            />
        <ImageView
            android:id="@+id/iv_cyc"
            android:layout_marginTop="32dp"
            android:background="@drawable/cyc1"
            android:layout_centerHorizontal="true"
            android:layout_width="38dp"
            android:layout_height="38dp" />
    </RelativeLayout>

    <LinearLayout
        android:padding="1dp"

        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/message_bg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:orientation="vertical">

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"

                android:text="测量血压"
                android:textColor="@color/slow_black"
                android:textSize="15sp" />

            <TextView
                android:layout_gravity="center_vertical"

                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:text="阿莫西林2颗，阿西美辛胶囊"
                android:textColor="#545454"
                android:textSize="13sp" />

        </LinearLayout>


        <TextView
            android:background="@color/white"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:text="01.24 10:30"
            android:textColor="@color/color8"
            android:textSize="12sp" />


    </LinearLayout>

</LinearLayout>