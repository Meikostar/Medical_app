<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="107.5dp">
<LinearLayout

    android:id="@+id/ll_bg"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="107dp">
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>
   <LinearLayout
       android:gravity="center_vertical"
       android:layout_weight="1"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <LinearLayout
           android:layout_marginTop="15dp"
           android:gravity="center_vertical"
           android:layout_marginLeft="12dp"

           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >
           <TextView
               android:id="@+id/tv_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Lxm"
               android:textColor="@color/slow_black"
               android:textSize="16.5sp"
               />
           <TextView
               android:layout_marginLeft="11dp"
               android:layout_marginTop="3dp"
               android:id="@+id/tv_phone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="125424455"
               android:textColor="@color/color6"
               android:textSize="13.5sp"
               />

       </LinearLayout>
       <LinearLayout
           android:layout_marginTop="12dp"
           android:layout_marginBottom="15dp"
           android:layout_marginLeft="12dp"
           android:gravity="center_vertical"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
      >
           <TextView
               android:id="@+id/tv_des"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="高级护师"
               android:textColor="#575757"
               android:textSize="13.5sp"
               />
           <TextView
               android:id="@+id/tv_address"
               android:layout_marginTop="9dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="中山火炬开发区"
               android:textColor="@color/color6"
               android:textSize="13.5sp"
               />

       </LinearLayout>
   </LinearLayout>
    <Button
        android:visibility="gone"
        android:id="@+id/bt_add"
        android:layout_width="57.5dp"
        android:layout_height="27dp"
        android:layout_marginRight="15.5dp"
        android:text="添加"
        android:textColor="@color/white"
        android:background="@drawable/shape_bg_lin_cancel"
        android:layout_gravity="right|center_vertical"/>
    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_gravity="center_vertical"
        android:src="@drawable/arrow_left"
        android:layout_width="8dp"
        android:layout_height="13dp"
        android:layout_marginRight="14dp"/>
</LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.45dp"
        android:background="@color/linecolor"/>
</LinearLayout>