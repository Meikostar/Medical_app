<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/content_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
       android:background="@color/blue"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <View
          android:layout_width="match_parent"
          android:layout_height="0.01dp"
          android:id="@+id/line"/>
      <RelativeLayout
          android:layout_marginTop="22dp"
          android:layout_width="match_parent"
          android:layout_height="44dp">
          <ImageView
              android:id="@+id/iv_back"
              android:padding="9dp"
              android:layout_marginLeft="5dp"
              android:layout_centerVertical="true"
              android:layout_width="28dp"
              android:layout_height="40dp"
              android:src="@drawable/black_left"/>
          <TextView
              android:layout_centerInParent="true"

              android:gravity="center"
              android:textSize="16sp"
              android:textColor="@color/white"
              android:text="亲友详情"
              android:layout_width="wrap_content"
              android:layout_height="55dp" />
      </RelativeLayout>


      <LinearLayout
          android:background="@color/blue"

          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="90dp"
          android:orientation="horizontal">
          <ImageView
              android:id="@+id/iv_avatar"
              android:layout_width="43dp"
              android:layout_height="43dp"
              android:layout_marginLeft="15dp"/>
          <LinearLayout
              android:layout_marginLeft="12dp"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:layout_weight="1"
              android:layout_width="wrap_content"
              android:layout_height="match_parent">
              <LinearLayout
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                  <TextView
                      android:id="@+id/tv_name"
                      android:text="张三"
                      android:textColor="@color/white"
                      android:textSize="17sp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
                  <ImageView
                     android:id="@+id/iv_sex"
                      android:layout_width="14dp"
                      android:layout_height="14dp"
                      android:src="@drawable/mine1"
                      android:layout_marginLeft="15dp"/>
              </LinearLayout>
              <TextView
                  android:id="@+id/tv_phone"
                  android:layout_marginTop="6dp"
                  android:text="18155623647"
                  android:layout_marginRight="13dp"
                  android:textColor="@color/white"
                  android:textSize="14sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
          </LinearLayout>
          <TextView
              android:id="@+id/tv_bind"
              android:background="@drawable/line_regle_white"
              android:padding="6dp"
              android:layout_marginRight="15dp"
              android:text="解除绑定"
              android:textColor="@color/white"
              android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </LinearLayout>
      <LinearLayout

          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <ImageView

              android:id="@+id/imageView"
              android:layout_width="18dp"
              android:layout_height="18dp"
              android:layout_marginLeft="19dp" />

          <TextView
              android:layout_marginLeft="12dp"
              android:id="@+id/tv_birth"
              android:text="1991.1.19"
              android:textColor="@color/white"
              android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />

      </LinearLayout>
      <LinearLayout
          android:layout_marginBottom="13dp"
           android:layout_marginTop="11dp"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <ImageView

              android:layout_width="18dp"
              android:layout_height="18dp"
              android:layout_marginLeft="19dp"/>
          <TextView
              android:id="@+id/tv_address"
              android:layout_marginLeft="12dp"
              android:text="深圳市南山区科技路 9号"
              android:textColor="@color/white"
              android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />

      </LinearLayout>
  </LinearLayout>



    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:id="@+id/ll_blood_press"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:text="血压测量记录"
            android:layout_weight="1"
            android:layout_marginLeft="13dp"
            android:textColor="@color/slow_black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="13dp"
            android:textColor="@color/slow_black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView

            android:src="@drawable/arrow_left"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_marginRight="13dp"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/linecolor"/>
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/ll_blood_sugar"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:text="血糖测量记录"
            android:layout_weight="1"
            android:layout_marginLeft="13dp"
            android:textColor="@color/slow_black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView

            android:src="@drawable/arrow_left"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_marginRight="13dp"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/linecolor"/>

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/ll_Medical_plan"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:text="用药计划"
            android:layout_weight="1"
            android:layout_marginLeft="13dp"
            android:textColor="@color/slow_black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="13dp"
            android:textColor="@color/slow_black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView

            android:src="@drawable/arrow_left"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_marginRight="13dp"/>
    </LinearLayout>


</LinearLayout>